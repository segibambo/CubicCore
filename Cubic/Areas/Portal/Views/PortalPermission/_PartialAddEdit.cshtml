
@model Cubic.Data.ViewModel.PermissionViewModel
@{
    ViewBag.Title = "Permission";
    Layout = null;
}

<div class="modal-content">
    <form class="form-horizontal"  asp-area="Portal" asp-controller="PortalPermission" asp-action="@ViewBag.PostAction"  method="post">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="page-heading" id="myModalLabel">@ViewBag.ModalTitle Permission</h1>
        </div>


        <div class="modal-body">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PermissionName" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="PermissionName" class="form-control" type="text" required="" />
                    <span asp-validation-for="PermissionName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PermissionCode" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="PermissionCode" class="form-control" type="text" required="" />
                    <span asp-validation-for="PermissionCode" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-info">@ViewBag.ButtonAction</button>
        </div>

    </form>
</div>


