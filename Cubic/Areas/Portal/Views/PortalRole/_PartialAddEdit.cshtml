
@model Cubic.Data.ViewModel.ApplicationRoleViewModel

@{
    ViewBag.Title = "Role";
    Layout = null;
}

<div class="modal-content">
    <form class="form-horizontal" asp-controller="PortalRole" asp-area="Portal" asp-action="@ViewBag.PostAction" method="post">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="page-heading" id="myModalLabel">@ViewBag.ModalTitle Role</h1>
        </div>

        <div class="modal-body">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" type="text" required="" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedPermissionId" class="control-label col-sm-3"></label>
                <div class="col-sm-9">
                    <select asp-for="SelectedPermissionId" style="width: 100%" class="form-control select2" asp-items="Model.Permissions"></select>
                    <span asp-validation-for="SelectedPermissionId" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-info">@ViewBag.ButtonAction</button>
        </div>

    </form>

    <script type="text/javascript">
        $(".select2").select2();
    </script>

</div>


