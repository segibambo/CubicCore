@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_APPAuthLayout.cshtml";
}

<hr />



<div class="col-sm-12">
    <div class="wrapper-page">
        <div class="m-t-40 account-pages">
            <div class="text-center account-logo-box">
                <h2 class="text-uppercase">
                    <a href="index.html" class="text-success">
                        <span><img src="~/assets/images/logo.png" alt="" height="36"></span>
                    </a>
                </h2>
            </div>
            <div class="account-content">

                <div class="text-center m-b-20">
                    <p class="text-muted m-b-0 font-13">Enter your email address and we'll send you an email with instructions to reset your password.  </p>
                </div>

                <form class="form-horizontal" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Code" type="hidden" />

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Password" class="form-control" type="text" required="" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="ConfirmPassword" class="form-control" type="text" required="" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group account-btn text-center m-t-10">
                        <div class="col-xs-12">
                            <button class="btn w-md btn-bordered btn-danger waves-effect waves-light"
                                    type="submit">
                                Reset
                            </button>
                        </div>
                    </div>

                </form>

                <div class="clearfix"></div>
            </div>
        </div>

        <div class="row m-t-50">
            <div class="col-sm-12 text-center">
                <p class="text-muted">Back to Login Page?  <a asp-action="Login" class="text-primary m-l-5"><b>Login</b></a>  </p>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
