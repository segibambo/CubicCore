@model  changepasswordViewModel
@{
    ViewBag.Title = "Change password";
    Layout = null;
}

<div class="modal-content">
    <form class="form-horizontal" asp-action="ChangePassword" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="modal-title" id="myModalLabel">Change Password</h1>
        </div>

        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label col-sm-5" })
                <div class="col-sm-7">

                    <input asp-for="OldPassword" class="form-control" type="text" required="" placeholder="Old Password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-5" })
                <div class="col-sm-7">
                    <input asp-for="Password" class="form-control" type="text" required="" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-sm-5" })
                <div class="col-sm-7">
                    <input asp-for="ConfirmPassword" class="form-control" type="text" required="" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>

        </div>

        <!-- /.row -->
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    </form>
</div>

